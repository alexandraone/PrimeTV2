#include <stdio.h>
#include <stdlib.h>
#include <utility>
#include "GeneCoord.hh"
#include "libraries/BeepVector.hh"


//------------------------------------------------
//This datastructure is used for the storage 
//of the gene tree coordinates.
//------------------------------------------------


namespace beep 
{

  using namespace std;

  GeneCoord::GeneCoord()
  {
	genedata = make_pair(0.0,0.0);
  }

  GeneCoord::GeneCoord(const GeneCoord& gc)
    :genedata(gc.genedata)
  {}


  /*  
  pair<double,double>&
  Coord::operator[]()
  {
    return genedata;
  }
  */
  

  double&
  GeneCoord::operator()(int pos)
  {
    if(pos == 1)
      {
	return genedata.first;
      }
    else
      {
	return genedata.second;
      }
  }

  typedef BeepVector<GeneCoord> GeneCoordVector;

}


